<%- include('../../components/header'); -%>
    <link rel="stylesheet" href="/public/css/publish.css">
    <div class="w_main clear">
        <%- include('../../components/my_left') %>
            <div class="mod_right">

                <div id="mod_location">
                    <div class="mod_location clear">

                        <div class="left">
                            <a href="/user/my_recipe" title="回到我的菜谱" class="return">
                            </a>
                            编辑菜谱
                        </div>

                    </div>
                </div>
                <div class="mr_edit mr_edit_center clear">
                    <ul>
                        <li>
                            <label class="must">菜谱名称</label><br>
                            <input name="subject" class="inputL" type="text" value="<%= g_name %>">
                        </li>
                        <li>
                            <label class="must">成品图片</label><br>
                            <div class="J_upload">上传成品图
                                <input class="J_img" id="J_m_cover" type="file"
                                    accept="image/png,image/gif,image/jpeg" name="cover" data-url="/upload/recipe_img">
                            </div>
                            <div id="cover" class="clear">
                                <% if(!!cover_img){ %>
                                <div>
                                    <img class="imgLoad" src="<%= cover_img %>" style="display: inline-block;">
                                    <input type="hidden" name="allpic" value="<%= cover_img %>">
                                </div>
                                <% } %>
                            </div>
                        </li>
                        <li>
                            <textarea class="autosize" name="message" maxlength="500" placeholder="请输入菜谱描述，最多输入500字"
                                style="overflow: hidden; overflow-wrap: break-word; height: 120px;"><%= desc %></textarea>
                        </li>
                        <li class="makedifficulty">
                            <label class="must">制作难度</label><br>
                            <input type="hidden" id="difficulty" name="level" value="<%= difficulty %>">
                            <div class="things_type1 clear difficulty">
                                <span data-value="1">简单</span>
                                <span data-value="2">初级</span>
                                <span data-value="3">中级</span>
                                <span data-value="4">高级</span>
                            </div>
                        </li>

                        <li class="ingredient clear">
                            <label class="must">食材明细</label>                       

                            <blockquote>
                                <p><span>主料</span></p>
                                <% let zhuliao_arr = zhuliao.split('、') %>
                                <% if(!!zhuliao){ %>
                                    <% for(let i = 0;i < zhuliao_arr.length;i++){ %>
                                        <div class="<%= i===zhuliao_arr.length-1 ? 'J_addDiv' : '' %>">
                                            <input type="text" class="liao" autocomplete="off" value="<%= zhuliao_arr[i] %>">
                                            <% if(i != 0){ %>
                                                <a href="javascript:void(0);" class="delete J_delete"></a>
                                            <% } %>
                                        </div>
                                    <% } %>
                                <% }else{ %>
                                    <div class="J_addDiv">
                                        <input type="text" class="liao" placeholder="食材名" autocomplete="off">
                                    </div>
                                <% } %>
                            </blockquote>
                            <blockquote>
                                <p><span>辅料</span>
                                </p>
                                <% let fuliao_arr = fuliao.split('、') %>
                                <% if(!!fuliao){ %>
                                    <% for(let i = 0;i < fuliao_arr.length;i++){ %>
                                        <div class="<%= i===fuliao_arr.length-1 ? 'J_addDiv' : '' %>">
                                            <input type="text" class="liao" autocomplete="off" value="<%= fuliao_arr[i] %>">
                                            <% if(i != 0){ %>
                                                <a href="javascript:void(0);" class="delete J_delete"></a>
                                            <% } %>
                                        </div>
                                    <% } %>
                                <% }else{ %>
                                    <div class="J_addDiv">
                                        <input type="text" class="liao" placeholder="食材名" autocomplete="off">
                                    </div>
                                <% } %>
                            </blockquote>
                            <blockquote>
                                <p><span>调料</span><a href="javascript:void(0);" title="删除食材组" class="del"></a></p>
                                <% let tiaoliao_arr = tiaoliao.split('、') %>
                                <% if(!!tiaoliao){ %>
                                    <% for(let i = 0;i < tiaoliao_arr.length;i++){ %>
                                        <div class="<%= i===tiaoliao_arr.length-1 ? 'J_addDiv' : '' %>">
                                            <input type="text" class="liao" autocomplete="off" value="<%= tiaoliao_arr[i] %>">
                                            <% if(i != 0){ %>
                                                <a href="javascript:void(0);" class="delete J_delete"></a>
                                            <% } %>
                                        </div>
                                    <% } %>
                                <% }else{ %>
                                    <div class="J_addDiv">
                                        <input type="text" class="liao" placeholder="食材名" autocomplete="off">
                                    </div>
                                <% } %>
                            </blockquote>
                        </li>

                        <li class="step">
                            <label class="must">做法步骤</label><br>
                            <div class="J_upload">批量上传
                                <input multiple="" class="J_img" id="J_s_cover" type="file"
                                    accept="image/png,image/gif,image/jpeg" name="gourmet" data-url="/upload/recipe_step">
                            </div>
                            <span class="img_status" id="multi_step_status"></span>

                            <div id="dragsort" data-listidx="0">
 
                            </div>

                        </li>
                    </ul>
                </div>

                <div class="mr_edit mr_edit_fixed clear">
                    <input type="hidden" id="recipeinfo_id" value="<%= id %>">
                    <input class="btn1" id="postbtn" type="button" value="发布菜谱" data-id="0">
                    <% if(status!==1){ %>
                    <input class="btn2" id="savebtn" type="button" value="存为草稿">
                    <% } %>
                    <div id="save_tip"></div>
                </div>

            </div>
    </div>
    <script src="/public/js/edit_recipe.js"></script>
<%- include('../../components/footer') -%>