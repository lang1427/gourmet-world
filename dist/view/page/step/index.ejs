<%- include('../../components/header'); -%>
    
    <link rel="stylesheet" href="/public/css/step.css">
    <div class="wrap">
        <div class="w clear header">
            <div class="space_left">
                <div class="userTop clear">
                    <h1 class="recipe_De_title"><a href="javascript:void(0);" id="recipe_title" title="<%= goods_name %> "><%= goods_name %> </a>
                        <span class="copyright">独家</span>
                    </h1>
                    <a title="<%= user_name %>" href="/user?userid=<%= user_id %>" target="_blank"
                        class="uright">
                        <img
                            src="<%= user_avatar %>">
                        <span class="userName" id="recipe_username"><%= user_name %> </span>
                    </a>
                </div>

                <div class="space_box_home">

                    <div class="recipDetail">

                        <input type="hidden" id="recipe_id" value="<%= goods_id %>">
                        <input type="hidden" id="recipe_uid" value="<%= user_id %>">
                        <input type="hidden" id="recipe_title" value="<%= goods_name %>">
                        <div class="recipe_De_imgBox" id="recipe_De_imgBox">
                            <a class="J_photo" title="<%= goods_name %> 的做法"><span></span>
                                <img src="<%= goods_img %> " alt="<%= goods_name %> 的做法"> 
                            </a>
                        </div>

                        <div class="mo mt20">
                            <h3>食材明细</h3>
                        </div>
                        <% if(!!zhuliao){ %> 
                        <fieldset class="particulars">
                            <legend>主料</legend>

                            <div class="recipeCategory_sub_R clear">
                                <ul>
                                    <% let zhuliaoList = zhuliao.split('、')  %> 
                                    <% for(let i =0; i < zhuliaoList.length; i++){ %> 
                                        <li>
                                            <span class="category_s1">
                                            <b><%= zhuliaoList[i] %> </b>
                                            </span>
                                            <span class="category_s2">适量</span>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </fieldset>
                        <% } %> 
                        <% if(!!fuliao){ %>
                        <fieldset class="particulars">
                            <legend>辅料</legend>

                            <div class="recipeCategory_sub_R clear">
                                <ul>
                                    <% let fuliaoList = fuliao.split('、') %> 
                                    <% for(let i = 0; i < fuliaoList.length; i++){ %> 
                                    <li>
                                        <span class="category_s1">
                                           <b><%= fuliaoList[i] %> </b>
                                        </span>
                                        <span class="category_s2">适量</span>
                                    </li>
                                    <% } %> 
                                </ul>
                            </div>
                        </fieldset>
                        <% } %> 
                        <% if(tiaoliao){ %> 
                        <fieldset class="particulars">
                            <legend>调料</legend>

                            <div class="recipeCategory_sub_R clear">
                                <ul>
                                    <% let tiaoliaoList = tiaoliao.split('、') %> 
                                    <% for(let i = 0; i < tiaoliaoList.length; i++){ %> 
                                    <li>
                                        <span class="category_s1">
                                           <b><%= tiaoliaoList[i] %> </b>
                                        </span>
                                        <span class="category_s2">适量</span>
                                    </li>
                                    <% } %> 
                                </ul>
                            </div>
                        </fieldset>
                        <% } %> 
                        <div class="recipeCategory_sub_R mt30 clear">
                            <ul>                    
                                <li>
                                    <span class="category_s1">
                                        <a title="<%= difficulty %> " href="javascript:;"><%= difficulty %> </a>
                                    </span>
                                    <span class="category_s2">难度</span>
                                </li>
                            </ul>
                        </div>

                        <div class="mo mt20">
                            <h3><%= goods_name %> 的做法步骤</h3>
                        </div>

                        <div class="recipeStep">
                            <ul>
                                <% for(let i in JSON.parse(step_desc)){ %>
                                    <li>
                                        <div class="recipeStep_img">
                                            <img src="<%= JSON.parse(step_img)[i] %> "  alt="<%= goods_name %> 的做法步骤：<%= i %> " />
                                        </div>
                                        <div class="recipeStep_word">
                                            <div class="recipeStep_num"><%= i %> </div><%= JSON.parse(step_desc)[i] %> 
                                        </div>
                                    </li>
                                <% } %> 
                            </ul>
                        </div>
                        <div class="mo">
                            <h3>小窍门</h3>
                        </div>
                        <div class="recipeTip">
                            <%= goods_desc %> 
                        </div>
                        <div class="recipeTip mt16">
                            来自 美食天下 <a href="/user?userid=<%= user_id %> "
                                target="_blank"><%= user_name %> </a> 的作品
                        </div>
                       
                        <div class="recipeTip mt16">
                            所属分类：
                            <a title="<%= category.p_name %> " href="javascript:;"
                                target="_blank"><%= category.p_name %> </a>&nbsp;&nbsp;
                            <a title="<%= category.c_name %> " href="javascript:;"
                                target="_blank"><%= category.c_name %> </a>&nbsp;&nbsp;
                        </div>

                        <div class="recipeArction mt10 clear">
                            <ul class="collect_da">
                                <li class="lik"><a title="<%= isLike ? '已点赞' : '点赞' %> " href="javascript:void(0);" class="J_lik <%= isLike? 'on' :'' %> "
                                        data=""><i></i><span><%= like_count %> </span>人点赞</a></li>
                                <li class="col"><a title="加入菜单" href="javascript:void(0);" class="J_col"
                                        data=""><i></i>加入菜单</a></li>
                                <li class="com"><a title="评论" href="javascript:void(0);" class="J_com"
                                        data=""><i></i><span><%= comment_count %> </span>条评论</a></li>
                            </ul>

                        </div>

                        <%- include('../../components/comment') -%> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/public/js/step.js"></script>
<%- include('../../components/footer') -%>