<%- include('../../components/header'); -%>
    
    <link rel="stylesheet" href="/public/css/step.css">
    <div class="wrap">
        <div class="w clear header">
            <div class="space_left">
                <div class="userTop clear">
                    <h1 class="recipe_De_title"><a href="javascript:void(0);" id="recipe_title" title="<%= goods_name %> "><%= goods_name %> </a>
                        <span class="copyright">独家</span>
                    </h1>
                    <a title="<%= user_name %> " href="https://home.meishichina.com/space-10667631.html" target="_blank"
                        class="uright">
                        <img
                            src="https://i5.meishichina.com/data/avatar/010/66/76/31_avatar_big.jpg?x-oss-process=style/c320&amp;v=20210603">
                        <span class="userName" id="recipe_username"><%= user_name %> </span>
                    </a>
                </div>

                <div class="space_box_home">

                    <div class="recipDetail">

                        <input type="hidden" id="recipe_id" value="595759">
                        <input type="hidden" id="recipe_uid" value="10667631">
                        <input type="hidden" id="recipe_title" value="<%= goods_name %> ">
                        <div class="recipe_De_imgBox" id="recipe_De_imgBox">
                            <a class="J_photo" title="<%= goods_name %> 的做法"><span></span>
                                <img src="<%= goods_img %> " alt="<%= goods_name %> 的做法"> 
                            </a>
                        </div>

                        <div class="mo mt20">
                            <h3>食材明细</h3>
                        </div>
                        <% if(!!zhuliao){ %> 
                        <fieldset class="particulars">
                            <legend>主料</legend>

                            <div class="recipeCategory_sub_R clear">
                                <ul>
                                    <% let zhuliaoList = zhuliao.split('、')  %> 
                                    <% for(let i =0; i < zhuliaoList.length; i++){ %> 
                                        <li>
                                            <span class="category_s1">
                                            <b><%= zhuliaoList[i] %> </b>
                                            </span>
                                            <span class="category_s2">适量</span>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </fieldset>
                        <% } %> 
                        <% if(!!fuliao){ %>
                        <fieldset class="particulars">
                            <legend>辅料</legend>

                            <div class="recipeCategory_sub_R clear">
                                <ul>
                                    <% let fuliaoList = fuliao.split('、') %> 
                                    <% for(let i = 0; i < fuliaoList.length; i++){ %> 
                                    <li>
                                        <span class="category_s1">
                                           <b><%= fuliaoList[i] %> </b>
                                        </span>
                                        <span class="category_s2">适量</span>
                                    </li>
                                    <% } %> 
                                </ul>
                            </div>
                        </fieldset>
                        <% } %> 
                        <% if(tiaoliao){ %> 
                        <fieldset class="particulars">
                            <legend>调料</legend>

                            <div class="recipeCategory_sub_R clear">
                                <ul>
                                    <% let tiaoliaoList = tiaoliao.split('、') %> 
                                    <% for(let i = 0; i < tiaoliaoList.length; i++){ %> 
                                    <li>
                                        <span class="category_s1">
                                           <b><%= tiaoliaoList[i] %> </b>
                                        </span>
                                        <span class="category_s2">适量</span>
                                    </li>
                                    <% } %> 
                                </ul>
                            </div>
                        </fieldset>
                        <% } %> 
                        <div class="recipeCategory_sub_R mt30 clear">
                            <ul>                    
                                <li>
                                    <span class="category_s1">
                                        <a title="<%= difficulty %> " href="javascript:;"><%= difficulty %> </a>
                                    </span>
                                    <span class="category_s2">难度</span>
                                </li>
                            </ul>
                        </div>

                        <div class="mo mt20">
                            <h3><%= goods_name %> 的做法步骤</h3>
                        </div>

                        <div class="recipeStep">
                            <ul>
                                <% for(let i in JSON.parse(step_desc)){ %>
                                    <li>
                                        <div class="recipeStep_img">
                                            <img src="<%= JSON.parse(step_img)[i] %> "  alt="<%= goods_name %> 的做法步骤：<%= i %> " />
                                        </div>
                                        <div class="recipeStep_word">
                                            <div class="recipeStep_num"><%= i %> </div><%= JSON.parse(step_desc)[i] %> 
                                        </div>
                                    </li>
                                <% } %> 
                            </ul>
                        </div>
                        <div class="mo">
                            <h3>小窍门</h3>
                        </div>
                        <div class="recipeTip">
                            <%= goods_desc %> 
                        </div>
                        <div class="recipeTip mt16">
                            来自 美食天下 <a href="https://home.meishichina.com/space-10667631.html"
                                target="_blank"><%= user_name %> </a> 的作品
                        </div>
                       
                        <div class="recipeTip mt16">
                            所属分类：
                            <a title="<%= category.p_name %> " href="javascript:;"
                                target="_blank"><%= category.p_name %> </a>&nbsp;&nbsp;
                            <a title="<%= category.c_name %> " href="javascript:;"
                                target="_blank"><%= category.c_name %> </a>&nbsp;&nbsp;
                        </div>

                        <div class="recipeArction mt10 clear">
                            <ul class="collect_da">
                                <li class="lik"><a title="点赞" href="javascript:void(0);" class="J_lik"
                                        data=""><i></i><span><%= like_count %> </span>人点赞</a></li>
                                <li class="col"><a title="加入菜单" href="javascript:void(0);" class="J_col"
                                        data=""><i></i>加入菜单</a></li>
                                <li class="com"><a title="评论" href="javascript:void(0);" class="J_com"
                                        data=""><i></i><span><%= comment_count %> </span>条评论</a></li>
                                <li
                                    style="width:1px;border-right: 1px solid #ddd; height: 30px; margin: 2px 10px; overflow: hidden;">
                                </li>
                                <li class="shar"><a title="分享到微信" href="javascript:void(0);" class="J_s4"
                                        data="bds_weixin"><i></i>微信</a></li>
                                <li class="shar"><a title="分享到QQ好友" href="javascript:void(0);" class="J_s2"
                                        data="bds_sqq"><i></i>QQ好友</a></li>
                                <li class="shar"><a title="分享到QQ空间" href="javascript:void(0);" class="J_s3"
                                        data="bds_qzone"><i></i>QQ空间</a></li>
                                <li class="shar"><a title="分享到新浪微博" href="javascript:void(0);" class="J_s1"
                                        data="bds_tsina"><i></i>新浪微博</a></li>
                            </ul>

                            <div class="bdsharebuttonbox bdshare-button-style0-16" id="bdshare"
                                data-bd-bind="1622798075468">
                                <a title="分享到新浪微博" href="#" class="bds_tsina" id="bds_tsina" data-cmd="tsina"></a><a
                                    title="分享到QQ空间" href="#" class="bds_qzone" id="bds_qzone" data-cmd="qzone"></a><a
                                    title="分享到QQ好友" href="#" class="bds_sqq" id="bds_sqq" data-cmd="sqq"></a><a
                                    data-cmd="weixin" id="bds_weixin" class="bds_weixin" href="#" title="分享到微信"></a>
                            </div>

                        </div>

                        <div id="comment_top" class="mt20">

                        </div>

                        <div class="recipeComment mt30" id="comment"> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('../../components/footer') -%>