<script src="/public/js/top_bar.js"></script>
<div class="top-bar" id="J_top_bar">
    <% let barLeft = [
                {name:'美食天下', href:"/"},
                {name:'菜谱' ,   href:"/recipe"} ,
                {name:'食材' ,   href:"/YuanLiao"} ,
                {name:'珍选' ,   href:"/zhen"} ,
                {name:'健康' ,   href:"/Health"} ,
                {name:'专题' ,   href:"/mofang"} ,
                {name:'社区' ,   href:"/community"} ,
                {name:'话题' ,   href:"/pai"} ,
                {name:'活动' ,   href:"/activity"} ,
                {name:'搜索' ,   href:"/search"}
            ] 
    %>
    <ul class="bar-left left">
        <% for(let i = 0;i < barLeft.length;i++){ %>
            <% if(i===0){ %>
                <li>
                    <a title="<%= barLeft[i].name %>" href="<%= barLeft[i].href %>" target="_blank" class="top_bar_logo">
                        <i><%= barLeft[i].name %> </i>首页
                    </a>
                </li>
            <% }else{ %>
                <li>
                    <a title="<%= barLeft[i].name %>" href="<%= barLeft[i].href %>" target="_blank">
                        <%= barLeft[i].name %>
                    </a>
                </li>
            <% } %>
        <% } %>
    </ul>
    <div class="right" id="J_top_bar_user">    
        <ul class="clear bar-info right bar-noLogin" id="J_barUser">
            <li class="bar-link bar-item bar-reg"><a href="/user/register/" >注册</a></li>
            <li class="bar-link bar-item bar-login"><a href="/user/login/" >登录</a></li>
            <li class="bar-user J_down bar-item">
                    <div class="bar-text">
                        <div class="bar-text-userName" id="J_barUserName"></div><i class="arrow"></i>
                    </div>
                    <div class="bar-box">
                        <ul>
                            <% 
                                let barUser = [
                                    { name:'收藏', href:'/my_fav_recipe' },
                                    { name:'管理', href:'/my_manage' },
                                    { name:'私信', href:'/my_privately_list' },
                                    { name:'通知', href:'/my_notice_list' },
                                    { name:'退出', href:'javascript:;' },
                                ]   
                            %> 
                            <% for(let i = 0; i<barUser.length; i++){ %> 
                                <li class="bar-box-item-<%=i%> <%= i=== barUser.length-1 ? "J_barExit" : "" %>"><a title="<%= barUser[i].name %>" href="<%= barUser[i].href %> " target="<%= i===barUser.length-1 ? "" : "_blank" %>"><%= barUser[i].name %></a></li>
                            <% } %> 
                        </ul>
                    </div>
            </li>
            <li class="bar-add J_down bar-item">
                    <div class="bar-text"><img width="18" height="18" src="//static.meishichina.com/v6/img/lib/nr1.png">发布
                    </div>
                    <div class="bar-box">
                        <ul>
                            <% 
                                let barBox = [
                                    { name:'发菜谱', href:'/recipe-add' },
                                    { name:'发话题', href:'/pai-add' },
                                    { name:'发日志', href:'/blog-add' },
                                ]    
                            %> 
                            <% for(let i = 0; i < barBox.length; i++){ %> 
                                <li class="bar-box-item-<%=i%>"><a href="<%= barBox[i].href %> " target="_blank" class="J_barLogin"><%= barBox[i].name %> </a></li>
                            <% } %> 
                        </ul>
                    </div>
            </li>
        </ul>
    </div>
</div>