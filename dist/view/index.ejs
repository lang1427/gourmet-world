                                    <ul class="sub" style="display: none;">
                                        <% for(let j = 0; j < category[i].children.length; j++){ %> 
                                            <li>
                                                <% 
                                                    let name = category[i].children[j].name.split('/')    
                                                    let title = name[0]
                                                    let sub_title = name[1]
                                                %> 
                                                <a href="">
                                                    <%= title %> 
                                                    <span><%= sub_title %> </span>
                                                </a>
                                            </li>
                                        <% } %> 
                                    </ul>
                                <% } %> 
                            </li>
                        <% } %>
                    </ul>
                </div>
